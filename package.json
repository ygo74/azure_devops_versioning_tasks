{
  "name": "azure_devops_versioning_tasks",
  "version": "1.0.0",
  "description": "Tasks to manage build versioning",
  "main": "build/make.js",
  "scripts": {
    "_test": "node ./Build/make.js test",
    "_build": "node ./Build/make.js build",
    "_clean": "node ./Build/make.js clean",
    "_bump": "node ./Build/make.js bump",
    "_buildAndTest": "node ./Build/make.js build test",
    "initdev": "npm run initdev:npm",
    "initdev:npm": "npm run initdev:npm:base & npm run initdev:npm:tasks",
    "initdev:npm:base": "npm install --no-progress --no-update-notifier",
    "initdev:npm:tasks": "glob-exec --parallel --foreach \"src/*/tsconfig.json\" -- \"cd {{file.dir}} && npm install --no-update-notifier --no-progress\"",
    "compile:tasks": "glob-exec \"src/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}}\"",
    "postcompile:tasks": "npm run lint:tasks",
    "lint:tasks": "glob-exec --parallel --foreach \"src/*/tsconfig.json\" -- \"eslint {{file.dir}} --parser-options \"{'project':['{{file}}','src/tsconfig.json']}\"",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "build": "npm run build:tasks",
    "build:clean": "npm run clean && npm run initdev && npm run build",
    "build:tasks": "npm run compile:tasks",
    "package": "npm run build:clean && npm run package:tasks",
    "clean": "git clean -fdX"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ygo74/azure_devops_versioning_tasks.git"
  },
  "author": "YGO74",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ygo74/azure_devops_versioning_tasks/issues"
  },
  "homepage": "https://github.com/ygo74/azure_devops_versioning_tasks#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "adm-zip": "0.4.13",
    "azure-devops-node-api": "^9.0.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "glob-exec": "^0.1.1",
    "js-yaml": "^3.13.1",
    "markdown-toc": "^1.2.0",
    "minimatch": "3.0.2",
    "minimist": "^1.1.1",
    "mocha": "2.3.3",
    "mocha-junit-reporter": "^1.17.0",
    "node-uuid": "1.4.6",
    "q": "1.4.1",
    "semver": "^4.3.3",
    "shelljs": "^0.3.0",
    "sync-request": "4.1.0",
    "typed-rest-client": "1.0.9",
    "typescript": "^4.4.3",
    "validator": "3.33.0"
  }
}
